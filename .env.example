# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
APP_NAME=Mapid
APP_VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/mapid_dev

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# AWS S3 Configuration (Optional - for image uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_DEFAULT_REGION=us-west-2
S3_BUCKET_NAME=your-s3-bucket-name

# Image Upload Settings
MAX_CONTENT_LENGTH=10485760  # 10MB
UPLOAD_FOLDER=uploads

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379/0

# Geospatial Configuration
DEFAULT_LATITUDE=37.7749
DEFAULT_LONGITUDE=-122.4194
MAX_DISTANCE_KM=50
LOCATION_FUZZING_RADIUS=50

# Post Configuration
POST_RETENTION_DAYS=30
MAX_POSTS_PER_USER_PER_DAY=10

# Content Moderation
ENABLE_CONTENT_MODERATION=true
MODERATION_CONFIDENCE_THRESHOLD=0.8

# Pagination
POSTS_PER_PAGE=20
IMAGES_PER_PAGE=12

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/mapid.log

# External APIs
NOMINATIM_BASE_URL=https://nominatim.openstreetmap.org
NOMINATIM_USER_AGENT=Mapid/1.0

# Sentry (Optional - for error tracking)
SENTRY_DSN=your-sentry-dsn-here

# Development Tools
DEBUG_TB_ENABLED=true
DEBUG_TB_INTERCEPT_REDIRECTS=false